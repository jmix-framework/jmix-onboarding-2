<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="onboarding">
        <createTable tableName="WEBDAV_DOCUMENT_WRAPPER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_WEBDAV_DOCUMENT_WRAPPER"/>
            </column>
            <column name="WEBDAV_DOCUMENT_ID" type="UUID"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="FOLDER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="onboarding">
        <createTable tableName="WEBDAV_FOLDER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_WEBDAV_FOLDER"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="CLASSIFICATION" type="VARCHAR(255)"/>
            <column name="DEPARTMENT_ID" type="UUID"/>
            <column name="PARENT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="onboarding">
        <createIndex indexName="IDX_WEBDAV_DOCUMENT_WRAPPER_FOLDER" tableName="WEBDAV_DOCUMENT_WRAPPER">
            <column name="FOLDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FOLDER_ID" baseTableName="WEBDAV_DOCUMENT_WRAPPER"
                                 constraintName="FK_WEBDAV_DOCUMENT_WRAPPER_ON_FOLDER" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="WEBDAV_FOLDER"/>
    </changeSet>
    <changeSet id="4" author="onboarding">
        <createIndex indexName="IDX_WEBDAV_DOCUMENT_WRAPPER_WEBDAV_DOCUMENT" tableName="WEBDAV_DOCUMENT_WRAPPER">
            <column name="WEBDAV_DOCUMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="WEBDAV_DOCUMENT_ID" baseTableName="WEBDAV_DOCUMENT_WRAPPER"
                                 constraintName="FK_WEBDAV_DOCUMENT_WRAPPER_ON_WEBDAV_DOCUMENT"
                                 referencedColumnNames="ID" referencedTableName="WEBDAV_WEBDAV_DOCUMENT"/>
    </changeSet>
    <changeSet id="5" author="onboarding">
        <createIndex indexName="IDX_WEBDAV_FOLDER_DEPARTMENT" tableName="WEBDAV_FOLDER">
            <column name="DEPARTMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="WEBDAV_FOLDER"
                                 constraintName="FK_WEBDAV_FOLDER_ON_DEPARTMENT" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
    <changeSet id="6" author="onboarding">
        <createIndex indexName="IDX_WEBDAV_FOLDER_PARENT" tableName="WEBDAV_FOLDER">
            <column name="PARENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PARENT_ID" baseTableName="WEBDAV_FOLDER"
                                 constraintName="FK_WEBDAV_FOLDER_ON_PARENT" referencedColumnNames="ID"
                                 referencedTableName="WEBDAV_FOLDER"/>
    </changeSet>
</databaseChangeLog>